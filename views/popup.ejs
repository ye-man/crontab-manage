<!-- Add Server -->
<div class="modal fade" id="add_server">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="server-title">Add Server</h4>
            </div>
            <div class="modal-body" id="job-body">
                <div class="form-group">
                    <label>Name</label>
                    <input placeholder="server name" type='text' class='form-control' id='server-name'/><br />
                </div>
                <div class="form-group">
                    <label>Hostname</label>
                    <input placeholder="server hostname" type='text' class='form-control' id='server-hostname'/><br />
                </div>
                <div class="form-group">
                    <label>Username</label>
                    <input placeholder="server username" type='text' class='form-control' id='server-username'/><br />
                </div>
                <div class="form-group">
                    <label>Distribution</label>
                    <select class='form-control' id='server-distribution'>
                        <option value="null">Select Distribution</option>
                        <option value="ubuntu">Ubuntu</option>
                        <option value="centos">CentOS</option>
                    </select><br />
                </div>
                <div class="form-group">
                    <div id="password_div">
                    <label>Password (It will NOT be saved anywhere!!!)</label>
                    <input placeholder="server password" type='text' class='form-control' id='server-password'/><br />
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="server-save">Save</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


